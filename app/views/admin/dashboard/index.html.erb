<%= turbo_stream_from "attendance_stream" %>

<div class="container mx-auto px-4 py-8 max-w-7xl">
  
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-white tracking-tight">Dashboard Overview</h1>
      <p class="text-gray-400 text-sm mt-1">Welcome back, <%= current_user.full_name %></p>
    </div>
    <div class="bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-gray-300 text-sm font-medium shadow-sm">
      <%= Date.current.strftime("%A, %B %d, %Y") %>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    
    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-lg relative overflow-hidden group">
      <div class="absolute right-0 top-0 h-full w-1 bg-gradient-to-b from-green-400 to-green-600"></div>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">Online Now</p>
          <h3 class="text-3xl font-bold text-white mt-2"><%= @active_users.count %></h3>
        </div>
        <div class="p-3 bg-gray-700/50 rounded-lg text-green-400 group-hover:scale-110 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z" /></svg>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-lg relative overflow-hidden group">
      <div class="absolute right-0 top-0 h-full w-1 bg-gradient-to-b from-blue-400 to-blue-600"></div>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">Total Staff</p>
          <h3 class="text-3xl font-bold text-white mt-2"><%= @total_employees %></h3>
        </div>
        <div class="p-3 bg-gray-700/50 rounded-lg text-blue-400 group-hover:scale-110 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-lg relative overflow-hidden group">
      <div class="absolute right-0 top-0 h-full w-1 bg-gradient-to-b from-yellow-400 to-orange-500"></div>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">Leave Requests</p>
          <h3 class="text-3xl font-bold text-white mt-2"><%= @pending_leaves %></h3>
        </div>
        <div class="p-3 bg-gray-700/50 rounded-lg text-yellow-400 group-hover:scale-110 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-lg relative overflow-hidden group">
      <div class="absolute right-0 top-0 h-full w-1 bg-gradient-to-b from-purple-400 to-pink-500"></div>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">Check-ins Today</p>
          <h3 class="text-3xl font-bold text-white mt-2"><%= @today_attendance %></h3>
        </div>
        <div class="p-3 bg-gray-700/50 rounded-lg text-purple-400 group-hover:scale-110 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    
    <div class="lg:col-span-1 space-y-6">
      <h3 class="text-lg font-bold text-white">Management</h3>
      <div class="grid grid-cols-2 gap-4">
        
        <%= link_to admin_users_path, class: "flex flex-col items-center justify-center p-6 bg-gray-800 border border-gray-700 rounded-xl hover:bg-gray-750 hover:border-blue-500 transition group shadow-lg" do %>
          <div class="bg-blue-900/30 p-3 rounded-full text-blue-400 group-hover:text-blue-300 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
          </div>
          <span class="text-gray-300 font-medium text-sm">Employees</span>
        <% end %>

        <%= link_to admin_departments_path, class: "flex flex-col items-center justify-center p-6 bg-gray-800 border border-gray-700 rounded-xl hover:bg-gray-750 hover:border-indigo-500 transition group shadow-lg" do %>
          <div class="bg-indigo-900/30 p-3 rounded-full text-indigo-400 group-hover:text-indigo-300 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
          </div>
          <span class="text-gray-300 font-medium text-sm">Departments</span>
        <% end %>

        <%= link_to admin_leave_requests_path, class: "flex flex-col items-center justify-center p-6 bg-gray-800 border border-gray-700 rounded-xl hover:bg-gray-750 hover:border-teal-500 transition group shadow-lg relative" do %>
          <% if @pending_leaves > 0 %>
            <span class="absolute top-2 right-2 bg-red-500 text-white text-[10px] font-bold px-2 py-0.5 rounded-full"><%= @pending_leaves %></span>
          <% end %>
          <div class="bg-teal-900/30 p-3 rounded-full text-teal-400 group-hover:text-teal-300 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
          </div>
          <span class="text-gray-300 font-medium text-sm">Leave</span>
        <% end %>

        <%= link_to admin_payments_path, class: "flex flex-col items-center justify-center p-6 bg-gray-800 border border-gray-700 rounded-xl hover:bg-gray-750 hover:border-green-500 transition group shadow-lg" do %>
          <div class="bg-green-900/30 p-3 rounded-full text-green-400 group-hover:text-green-300 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          </div>
          <span class="text-gray-300 font-medium text-sm">Payroll</span>
        <% end %>

        <%= link_to admin_audit_logs_path, class: "flex flex-col items-center justify-center p-6 bg-gray-800 border border-gray-700 rounded-xl hover:bg-gray-750 hover:border-gray-400 transition group shadow-lg" do %>
          <div class="bg-gray-700 p-3 rounded-full text-gray-300 group-hover:text-white mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" /></svg>
          </div>
          <span class="text-gray-300 font-medium text-sm">Audit Trail</span>
        <% end %>

      </div>
    </div>

    <div class="lg:col-span-2 space-y-6">
      <h3 class="text-lg font-bold text-white">Analytics</h3>
      <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-lg">
        <h4 class="text-gray-400 text-sm font-bold uppercase mb-4">Attendance Trends (30 Days)</h4>
        <%= line_chart Attendance.group_by_day(:check_in, range: 1.month.ago..Time.now).count, colors: ["#60A5FA"], height: "200px" %>
      </div>
    </div>
  </div>

  <div class="space-y-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <h3 class="text-lg font-bold text-white">Live Attendance Feed</h3>
      
      <div class="w-full md:w-auto">
        <%= search_form_for [:admin, @q], url: admin_dashboard_path, class: "relative" do |f| %>
          <%= f.search_field :user_email_or_user_full_name_cont, class: "w-full md:w-64 bg-gray-900 border border-gray-700 text-gray-300 text-sm rounded-full px-4 py-2 focus:ring-2 focus:ring-blue-500 outline-none", placeholder: "Search employee..." %>
          <button type="submit" class="absolute right-3 top-2.5 text-gray-500 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
          </button>
        <% end %>
      </div>
    </div>

    <div class="bg-gray-800 shadow-xl rounded-xl border border-gray-700 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-900/50">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase whitespace-nowrap">Employee</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase whitespace-nowrap">Date</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase whitespace-nowrap">Check In</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase whitespace-nowrap">Check Out</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase whitespace-nowrap hidden md:table-cell">IP Address</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase whitespace-nowrap">Location</th>
              <th class="px-6 py-4 text-center text-xs font-bold text-gray-400 uppercase whitespace-nowrap">Actions</th>
            </tr>
          </thead>
          <tbody id="attendance_table_body" class="divide-y divide-gray-700">
            <%= render partial: "admin/dashboard/attendance_row", collection: @attendances, as: :record %>
          </tbody>
        </table>
      </div>
      
      <div class="px-6 py-4 border-t border-gray-700 bg-gray-900/50 flex justify-between items-center">
        <span class="text-xs text-gray-500">Showing last <%= @attendances.count %> records</span>
        <%= link_to "View All History", admin_dashboard_path, class: "text-xs text-blue-400 hover:text-blue-300 font-bold" %>
      </div>
    </div>
  </div>

</div>