<div class="max-w-md mx-auto bg-gray-800 p-8 border border-gray-700 shadow-lg rounded-lg mt-10">
  <h2 class="text-2xl font-bold mb-6 text-white">Correct Attendance</h2>
  <p class="text-gray-400 mb-6 text-sm">Employee: <span class="text-blue-400 font-semibold"><%= @attendance.user.full_name %></span></p>

  <%= form_with(model: [:admin, @attendance], local: true, class: "space-y-4") do |f| %>
    
    <% if @attendance.errors.any? %>
      <div class="bg-red-900 text-red-200 p-3 rounded text-sm border border-red-700">
        <%= @attendance.errors.full_messages.join(", ") %>
      </div>
    <% end %>

    <div>
      <%= f.label :check_in, class: "block text-sm font-medium text-gray-300" %>
      <%= f.datetime_field :check_in, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :check_out, class: "block text-sm font-medium text-gray-300" %>
      <%= f.datetime_field :check_out, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :note, "Admin Note (Reason for change)", class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_area :note, rows: 3, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Save Corrections", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer transition" %>
      <%= link_to "Cancel", admin_dashboard_path, class: "block text-center mt-3 text-gray-400 hover:text-gray-200 text-sm" %>
    </div>

  <% end %>
</div>