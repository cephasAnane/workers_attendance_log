<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-white">Manage Employees</h2>
    
    <%= link_to "Add New Employee", new_admin_user_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition shadow-lg" %>
  </div>

  <div class="bg-gray-800 shadow-lg rounded-lg overflow-hidden border border-gray-700">
    <table class="min-w-full divide-y divide-gray-700">
      <thead class="bg-gray-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Department</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-700">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-700 transition">
            
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <% if user.profile_photo.attached? %>
                   <%= image_tag user.avatar_thumbnail, class: "h-8 w-8 rounded-full object-cover mr-3 border border-gray-600" %>
                <% end %>
                <div class="text-sm font-medium text-white"><%= user.full_name %></div>
              </div>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= user.email %></td>
            
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <span class="<%= user.admin? ? 'bg-purple-900 text-purple-200 border border-purple-700' : 'bg-blue-900 text-blue-200 border border-blue-700' %> px-2 py-1 text-xs font-semibold rounded-full">
                <%= user.role.capitalize %>
              </span>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
              <%= user.department&.name || "None" %>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
              <div class="flex item-center justify-center gap-4">
                <%= link_to "Edit", edit_admin_user_path(user), class: "text-blue-400 hover:text-blue-300 transition" %>
                
                <% unless user == current_user %>
                  <%= button_to "Delete", admin_user_path(user), method: :delete, form: {data: {turbo_confirm: "Are you sure?"}}, class: "text-red-400 hover:text-red-300 bg-transparent border-0 cursor-pointer transition" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>