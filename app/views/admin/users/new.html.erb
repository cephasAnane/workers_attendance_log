<div class="max-w-md mx-auto bg-gray-800 p-8 border border-gray-700 shadow-lg rounded-lg mt-10">
  <h2 class="text-2xl font-bold mb-6 text-white">Add New Employee</h2>

  <%= form_with(model: [:admin, @user], local: true, class: "space-y-4") do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-900 text-red-200 p-3 rounded text-sm border border-red-700">
        <h3 class="font-bold mb-1"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :full_name, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :full_name, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g. John Doe" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "john@company.com" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :role, class: "block text-sm font-medium text-gray-300" %>
        <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :department_id, "Department", class: "block text-sm font-medium text-gray-300" %>
        <%= f.collection_select :department_id, Department.all, :id, :name, { prompt: "Select Department" }, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
    </div>
    
    <div>
      <%= f.label :hourly_rate, "Hourly Rate ($)", class: "block text-sm font-medium text-gray-300" %>
      <%= f.number_field :hourly_rate, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g. 25.00" %>
    </div>

    <div>
      <%= f.label :password, "Password (default: password123)", class: "block text-sm font-medium text-gray-300" %>
      <%= f.password_field :password, value: "password123", class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Create Employee", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition cursor-pointer" %>
      <%= link_to "Cancel", admin_users_path, class: "block text-center mt-3 text-gray-400 hover:text-gray-200 text-sm transition" %>
    </div>
  <% end %>
</div>