<div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold text-white">Manage Departments</h2>
  <%= link_to "Add Department", new_admin_department_path, class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded transition" %>
</div>

<div class="bg-gray-800 shadow-md rounded-lg overflow-hidden border border-gray-700">
  <table class="min-w-full divide-y divide-gray-700">
    <thead class="bg-gray-900">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Department Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Description</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-400 uppercase">Employees</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-400 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-700">
      <% @departments.each do |dept| %>
        <tr class="hover:bg-gray-700 transition">
          <td class="px-6 py-4 text-white font-medium"><%= dept.name %></td>
          <td class="px-6 py-4 text-gray-400 text-sm"><%= dept.description %></td>
          <td class="px-6 py-4 text-center">
            <span class="bg-gray-700 text-gray-200 py-1 px-3 rounded-full text-xs">
              <%= dept.users.count %>
            </span>
          </td>
          <td class="px-6 py-4 text-center">
            <%= link_to "Edit", edit_admin_department_path(dept), class: "text-blue-400 hover:text-blue-300 mx-2 text-sm" %>
            
            <% if dept.users.count == 0 %>
              <%= link_to "Delete", admin_department_path(dept), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-400 hover:text-red-300 mx-2 text-sm" %>
            <% else %>
              <span class="text-gray-600 text-xs cursor-not-allowed" title="Remove users first">Delete</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>