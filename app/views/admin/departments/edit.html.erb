<div class="max-w-md mx-auto bg-gray-800 p-8 border border-gray-700 shadow-lg rounded-lg mt-10">
  <h2 class="text-2xl font-bold mb-6 text-white">Edit Department</h2>

  <%= form_with(model: [:admin, @department], local: true, class: "space-y-4") do |f| %>
    
    <% if @department.errors.any? %>
      <div class="bg-red-900 text-red-200 p-3 rounded text-sm border border-red-700">
        <%= @department.errors.full_messages.join(", ") %>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Update Department", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer transition" %>
      <%= link_to "Cancel", admin_departments_path, class: "block text-center mt-3 text-gray-400 hover:text-gray-200 text-sm" %>
    </div>
  <% end %>
</div>