<div class="flex items-center justify-center min-h-[80vh]">
  <div class="w-full max-w-md bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-700 animate-fade-in-down">
    
    <div class="text-center mb-6">
      <div class="bg-gray-700 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-white">Forgot Password?</h2>
      <p class="text-gray-400 text-sm mt-2">No worries! Enter your email and we will send you reset instructions.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      
      <% if resource.errors.any? %>
        <div class="bg-red-900/50 text-red-200 p-3 rounded-lg text-sm border border-red-700 text-center">
          <%= resource.errors.full_messages.first %>
        </div>
      <% end %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition", placeholder: "you@example.com" %>
      </div>

      <div>
        <%= f.submit "Send Reset Link", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-sm font-bold text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition cursor-pointer hover:-translate-y-0.5" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Remember your password? 
        <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-blue-400 hover:text-blue-300 transition" %>
      </p>
    </div>

  </div>
</div>