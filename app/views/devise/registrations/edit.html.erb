<div class="max-w-md mx-auto bg-gray-800 p-8 border border-gray-700 shadow-lg rounded-lg mt-10">
  <h2 class="text-2xl font-bold mb-6 text-white">Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    
    <% if resource.errors.any? %>
      <div class="bg-red-900 text-red-200 p-3 rounded text-sm border border-red-700">
        <%= resource.errors.full_messages.join(", ") %>
      </div>
    <% end %>

    <div class="flex items-center space-x-4 mb-4">
      <% if resource.profile_photo.attached? && resource.profile_photo.blob&.persisted? %>
        <%= image_tag resource.profile_photo, class: "w-16 h-16 rounded-full object-cover border-2 border-blue-500" %>
      <% else %>
        <div class="w-16 h-16 rounded-full bg-gray-600 flex items-center justify-center text-gray-300 text-xs">
          No Photo
        </div>
      <% end %>
      
      <div class="flex-1">
        <%= f.label :profile_photo, "Upload New Photo", class: "block text-sm font-medium text-gray-300" %>
        <%= f.file_field :profile_photo, class: "mt-1 block w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-600 file:text-white hover:file:bg-blue-700" %>
      </div>
    </div>

    <div>
      <%= f.label :full_name, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :full_name, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password, "New Password (leave blank to keep current)", class: "block text-sm font-medium text-gray-300" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :current_password, "Current Password (needed to confirm changes)", class: "block text-sm font-medium text-blue-300" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Update Profile", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer transition" %>
      <%= link_to "Cancel", :back, class: "block text-center mt-3 text-gray-400 hover:text-gray-200 text-sm" %>
    </div>
  <% end %>
</div>