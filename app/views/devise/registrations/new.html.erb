<div class="flex items-center justify-center min-h-[80vh]">
  <div class="w-full max-w-md bg-gray-800 rounded-xl shadow-2xl p-8 border border-gray-700">
    
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-white mb-2">Create Account</h2>
      <p class="text-gray-400 text-sm">Join AttendanceLog to track your work</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-900/50 border border-red-500 text-red-200 px-4 py-3 rounded mb-6 text-sm">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
      <% end %>

      <div class="mb-5">
        <%= f.label :email, class: "block text-gray-300 text-sm font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition duration-200", 
            placeholder: "name@company.com" %>
      </div>

      <div class="mb-5">
        <div class="flex justify-between items-center mb-2">
          <%= f.label :password, class: "block text-gray-300 text-sm font-semibold" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> chars min)</span>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", 
            class: "w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition duration-200", 
            placeholder: "••••••••" %>
      </div>

      <div class="mb-8">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-300 text-sm font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
            class: "w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition duration-200", 
            placeholder: "••••••••" %>
      </div>

      <div>
        <%= f.submit "Sign Up", class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-4 rounded-lg shadow-lg hover:shadow-blue-500/30 transition duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-8 text-center border-t border-gray-700 pt-6">
      <p class="text-gray-400 text-sm">
        Already have an account?
        <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-400 hover:text-blue-300 font-semibold ml-1 hover:underline" %>
      </p>
    </div>
    
  </div>
</div>