<div class="max-w-md mx-auto bg-gray-800 p-8 border border-gray-700 shadow-lg rounded-lg mt-10">
  <h2 class="text-2xl font-bold mb-6 text-white">Request Advance Payment</h2>

  <%= form_with(model: @payment_request, url: payments_path, local: true, class: "space-y-4") do |f| %>
    
    <% if @payment_request.errors.any? %>
      <div class="bg-red-900 text-red-200 p-3 rounded text-sm border border-red-700">
        <%= @payment_request.errors.full_messages.join(", ") %>
      </div>
    <% end %>

    <div>
      <%= f.label :amount, "Amount Needed ($)", class: "block text-sm font-medium text-gray-300" %>
      <%= f.number_field :amount, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500", placeholder: "e.g. 200.00" %>
    </div>

    <div>
      <%= f.label :reason, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_area :reason, rows: 3, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:ring-blue-500", placeholder: "Briefly explain why..." %>
    </div>

    <div class="pt-4">
      <%= f.submit "Submit Request", class: "w-full bg-yellow-600 hover:bg-yellow-500 text-white font-bold py-2 px-4 rounded transition cursor-pointer" %>
      <%= link_to "Cancel", payments_path, class: "block text-center mt-3 text-gray-400 hover:text-gray-200 text-sm" %>
    </div>

  <% end %>
</div>